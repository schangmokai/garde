<!-- HEADER -->
<% include ../partials/header %>   
<!--END HEADER -->


    <!-- MAIN WRAPPER -->
    <div id="wrap" >
        

        <!-- HEADER SECTION -->
            <% include ../partials/headersection %>     
        <!-- END HEADER SECTION -->

        <!-- MENU LATERAL GAUCHE -->
              <% include ../partials/menulateralgauche %>
        <!-- FIN MENU LATERAL GAUCHE -->


        <!--PAGE CONTENT -->
        <div id="content">  
          <div class="inner" style="min-height: 700px;">
            <div class="row">
              <div class="col-lg-12">
                 <h1> <b>Administration</b> GARDE </h1>
              </div>
              </div>
                <hr/>
                 <!--  STACKING CHART  SECTION   -->
                <div class="row">
                   <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            Liste des groupes
                        </div>
                          <div class="panel-body">
                            <div class="demo-container">
                              <div id="placeholderStack" class="demo-placeholder">
                                <div class="row">
                                  <div class="col-sm-12">
                                    <div class="white-box">  

                                  <!-- Modal -->
                                        <% include ../elements/groupes/add %>
                                  <!-- form edit -->
                                        <% include ../elements/groupes/edit %>
                                  <!-- delete pour la supression d'un groupes -->
                                        <% include ../elements/groupes/delete %>
                                  <!-- /.modal-content --> 
                                    </div>
                                  <!-- /.modal-dialog --> 
                                    </div>

                                        <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">

                                                    <thead>
                                                        <tr>
                                                          <th>#</th>
                                                          <th>Name</th>
                                                          <th>Description</th>
                                                          <!--<th>Add</th>-->
                                                          <th>Edit</th>
                                                          <th>delete</th>
                                                        </tr>
                                                    </thead>
                                                    <tfoot>
                                                        <tr>
                                                          <th>#</th>
                                                          <th>Name</th>
                                                          <th>description</th>
                                                          <!--<th>Add</th>-->
                                                          <th>Edit</th>
                                                          <th>delete</th>
                                                        </tr>
                                                    </tfoot>
                                                  <tbody>
                                                    

                                                    <% todolist.forEach(function(todo, index) { %>
                                                         <tr class="groupes">
                                                              <th scope="row"><%= index %></th>
                                                              <td class="name"><%= todo.name %></td>
                                                              <input id="id" type="hidden" value="<%= todo.id %>">
                                                              <td class="description"><%= todo.description %></td>
                                                             <!--<td><a data-toggle="modal" data-target="#myModal"><span class="glyphicon glyphicon-plus"></span></a></td>-->

                                                              <!--<td><button class="btn btn-primary btn-xs btnEditgroupes" data-title="edit" data-toggle="modal" data-target="#myModal" ><span class="glyphicon glyphicon-plus"></span></button></td>-->

                                                             <!-- <td><a data-toggle="modal" data-target="#edit"><span class="glyphicon glyphicon-pencil"></span></a></td> -->

                                                             <td><button class="btn btn-primary btn-xs btnEditgroupes" data-title="edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></td>

                                                              <!--<td><a href="/todo/supprimer/<%= todo.id %>"><span class="glyphicon glyphicon-trash"></span></p> </a></td> -->

                                                              <!--<td><a data-toggle="modal" data-target="#delete"><span class="glyphicon glyphicon-trash"></span></p> </a></td>-->
                                                            <td> <button class="btn btn-danger btn-xs btnmodifiergroupes" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button> </td>
                                                        </tr>
                                                    <% }); %>
                                                   </tbody>
                                             </table>
                                          </div>
                                       </div>
                                    </div>
                                 </div>
                               </div>
                            </div>
                        </div>
                    </div>  
                </div>
                 <!--END STACKING CHART SCETION  -->
            </div>
        </div>
        <!--END PAGE CONTENT -->
         <!-- RIGHT STRIP  SECTION -->
            <% include ../partials/menulateraldroit %>   
         <!-- END RIGHT STRIP  SECTION -->
    </div>

    <!--END MAIN WRAPPER -->

    <!-- FOOTER -->
    <% include ../partials/footer %>   
    <!--END FOOTER -->
    <% include ../partials/js %>

  <script type="text/javascript">
   
    $(document).ready(function() {
      $('#example').DataTable();
    } );
       
        $(function () {
            $(".groupes").each(function () {
              var $groupes = $(this);

              $groupes.find('.btnEditgroupes').click(function(){

                  // alert($user.find(".nom").text());
                  // alert($user.find(".prenom").text());
                  $("#name").val($groupes.find(".name").text())
                  //pour toute  balise qui a pour id nom, dans son attribut value on doit mettre le texte du petit de user qui a pour classe nom
                  $("#description").val($groupes.find(".description").text())
                 
                  $("#id2").val($groupes.find("#id").val())

              });
            });
        });
        
        $(function () {
          $(".groupes").each(function () {
              var $groupes = $(this);
              $groupes.find('.btnmodifiergroupes').click(function(){
                  $("#ids").val($groupes.find("#id").val())
              });
            });
          });
    </script>


</body>

    <!-- END BODY -->
</html>
